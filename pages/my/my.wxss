/**app.wxss**/
.container{
  padding: 0;
}
.conect-view {
  height: 100%;
  display: flex;
  padding: 20rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.conect-desc{
  margin-top: 20rpx;
  display: block;
  left: 0;
  width: 100%;
  text-align: center;
  padding-bottom: 5rpx;
  font: 300 14px/16px 微软雅黑, simhei;
  font-weight:bold;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #84754e;
}
.conect-desc-small{
  margin-top: 5rpx;
  display: block;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 12rpx;
  color: blue;
  padding: 5rpx;
  font: 300 10px/12px 微软雅黑, simhei;
}
.conect{
  left: 0;
  width: 100%;
  text-align: left;
  font-size: 25rpx;  
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin: 15rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: #aaa;
}

